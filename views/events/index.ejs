<%- include('../partials/header') %>

<h1>All Appointments</h1>

<%if (!events.length) { %>
  <h4>No appointments yet. 
    <%}%>
  <a href="/events/new">Add an event</a>


  <% events.forEach(function(i) { %>
<div class="event-display" >
    <div class="accordion" onclick="togglePanel(this)">
        <tr>
            <td style="font-size: 34px;"><%= i.dateString %></td>
            <td class="event-display-title"><%= i.title %></td>
            <td class="event-display-time"><%=i.timeString %> </td>
            <div id='crud-buttons'>
            <td><form action='/events/<%=i._id%>/?_method=DELETE' method="POST">
              <button type ="submit">Delete</button></form></td>
              <td><a href="/events/<%=i._id%>/edit"><button>Edit</button></a></td></div>
            
        </tr></div>
  <div class="panel" style="display:none">
    <p>Lorem ipsum...</p>
  </div> 
</div>
    <% }) %>

    <%- include('../partials/footer' )%>